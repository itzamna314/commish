<div class="resource-list-header">
  {{#collapsible-div as |collapse|}}
    {{#if collapse.isTitle}}
      <span>Filter Leagues</span>
    {{/if}}
    {{#if collapse.isContent}}
      {{text-filter
        placeholder="Search Names..."
        onUpdate=(action 'filter')
        filterField='name'  
        }}
      {{/if}}
    {{/collapsible-div}}
</div>

<div class="resource-list">
  <div class="column">
    <div class="header">Name</div>
    {{#each rows as |row|}}
      <div class="row {{if row.selected "selected"}} {{if row.isHovered "hover"}}"
           {{action "rowSelected" row}}>
        {{resource-list/cell record=row value=row.name}}
        </div>
    {{/each}}
  </div>
  <div class="column">
    <div class="header">Location</div>
    {{#each rows as |row|}}
      <div class="row {{if row.selected "selected"}} {{if row.isHovered "hover"}}"
           {{action "rowSelected" row}}>
        {{resource-list/cell record=row value=row.location}}
        </div>
    {{/each}}
  </div>
  <div class="column">
    <div class="header">Division</div>
    {{#each rows as |row|}}
      <div class="row {{if row.selected "selected"}} {{if row.isHovered "hover"}}"
           {{action "rowSelected" row}}>
        {{resource-list/cell record=row value=row.division}}
        </div>
    {{/each}}
  </div>
  <div class="column">
    <div class="header">Start Date</div>
    {{#each rows as |row|}}
      <div class="row {{if row.selected "selected"}} {{if row.isHovered "hover"}}"
           {{action "rowSelected" row}}>
        {{resource-list/cell record=row value=row.startDate}}
        </div>
    {{/each}}
  </div>
  <div class="column">
    <div class="header">End Date</div>
    {{#each rows as |row|}}
      <div class="row {{if row.selected "selected"}} {{if row.isHovered "hover"}}"
           {{action "rowSelected" row}}>
        {{resource-list/cell record=row value=row.endDate}}
        </div>
    {{/each}}
  </div>
</div>

{{yield}}
